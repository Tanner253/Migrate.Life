<!DOCTYPE html>
<html>
    <head>
      <meta charset="utf-8">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      
      <link rel="stylesheet" href="/style/reset.css">
      <link rel="stylesheet" href="/style/results.css">

    </head>
    <body>
        <main>
            <header>
                <%- include('../partials/header') %>
                <a id="home" href="/" >home</a>
            </header>
            <section class="city-view">
              <ul id="city-list">
                <% cities.forEach(city => { %>
                  <li class="city-item" data-id="<%= city.id %>">

                    <h4>City Name: <%= city.name %></h4>
                    <p>Temp: <%= city.climateRange %></p>
                    <p>Pint of Beer: $<%= city.beer %></p>
                    <p>Milk $<%= city.milk %> per gallon</p>
                    <p>Gallon of Gas: $<%= city.gas %></p>
                    <p>Internet (60mbps or More): $<%= city.internet %></p>
                    <p>Health Index: <%= city.health %></p>
                    <p>Property Index: <%= city.property %></p>
                    <p>Climate Index: <%= city.climate %></p>
                  </li>
                  <li id= "buttonListItem">
                    <form class="create-form" action="/add" method="post">
                      <fieldset>
                        <input type="hidden" name="name" value="<%= city.name %>" />
                        <input type="hidden" name="climateRange" value="<%= city.climateRange %>" />
                        <input type="hidden" name="beer" value="<%= city.beer %>" />
                        <input type="hidden" name="milk" value="<%= city.milk %>" />
                        <input type="hidden" name="gas" value="<%= city.gas %>" />
                        <input type="hidden" name="internet" value="<%= city.internet %>" />
                        <input type="hidden" name="health" value="<%= city.health %>" />
                        <input type="hidden" name="property" value="<%= city.property %>" />
                        <input type="hidden" name="climate" value="<%= city.climate %>" />
                        <input type="hidden" name="lat" value="<%= city.latitude %>" />
                        <input type="hidden" name="long" value="<%= city.longitude %>" />
                        <input type="hidden" name="temp" value="<%= city.temp %>" />
                        <button id= "saveButton" type="submit">Save City</button>
                      </fieldset>
                  </form>
                </li>
                <% }) %>
                
              </ul>
            </section>
            
            
            <section>
            </section>
            <footer>
            <%- include('../partials/footer') %>
          </footer>
        </main>
    </body>
</html>
